<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.neo_cocoa.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_infomation"
        android:name="com.example.neo_cocoa.ui.infomation.InfomationFragment"
        android:label="@string/title_infomation"
        tools:layout="@layout/fragment_infomation" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.neo_cocoa.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_hazard"
        android:name="com.example.neo_cocoa.ui.hazard.HazardFragment"
        android:label="@string/title_hazard"
        tools:layout="@layout/fragment_hazard" />

    <fragment
        android:id="@+id/navigation_proof"
        android:name="com.example.neo_cocoa.ui.proof.ProofFragment"
        android:label="@string/title_proof"
        tools:layout="@layout/fragment_proof" />
